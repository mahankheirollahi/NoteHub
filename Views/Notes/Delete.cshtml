@model NoteHub.Models.Note

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-body">
    <h3 class="delete-title">Are you sure you want to delete this note?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="display:none;">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10" style="display:none;">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoteTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoteDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index" style="text-decoration:none">
            <i class="fa-solid fa-arrow-left fa-beat fa-xl" style="color: #ff0000;"></i>
        </a>
    </form>
</div>
